@using hefesto.admin.Models

@model AdmParameterCategory

@{
    ViewData["Title"] = "List";
}

<!-- =================================================================================== -->

<form id="formEditAdmParameterCategory" style="padding: 5px;" asp-action="Save">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="card">
        <div class="card-header" style="font-weight: bold;font-size: large;">
            @ViewData["editAdmParameterCategory.title"]
        </div>
        <div class="card-body">
            <div class="form-actions">
                <button type="submit" class="btn btn-success" id="btnSave">
                    <span class="icon text-white-50">
                        <i class="fa fa-check-circle"></i>
                    </span>
                    <span class="text">@ViewData["button.save"]</span>
                </button>

                <button type="reset" class="btn btn-light" id="btnReset">
                    <span class="icon text-gray-600">
                        <i class="fa fa-eraser"></i>
                    </span>
                    <span class="text">@ViewData["button.reset"]</span>
                </button>

                <button type="button" class="btn btn-primary" id="btnCancel">
                    <span class="icon text-white-50">
                        <i class="fa fa-times-circle"></i>
                    </span>
                    <span class="text">@ViewData["button.cancel"]</span>
                </button>
            </div>
            <div class="row">
                <div class="col-md-4 form-group mb-3">
                    <input type="hidden" id="admParameterCategory_id" />

                    <label asp-for="Description">@ViewData["editAdmParameterCategory.description"]</label>
                    <input type="text" class="form-control" asp-for="Description" maxlength="64" required="required" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group mb-3">
                    <label asp-for="Order">@ViewData["editAdmParameterCategory.order"]</label>
                    <input type="text" class="form-control" asp-for="Order" maxlength="64" required="required" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>

    <br>
    <br>
</form>

<script src="~/static/js/admin/admParameterCategory/editAdmParameterCategory.js"></script>

<!-- =================================================================================== -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

